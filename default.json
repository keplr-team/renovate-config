{
  "logLevel":"info",
  "onboarding":false,
  "requireConfig":false,
  "gitAuthor":"Keplr Butler <alfred@gokepler.fr>",
  "extends":[
    "config:base",
    "schedule:monthly",
    ":maintainLockFilesWeekly",
    ":enableVulnerabilityAlerts",
    ":disableRateLimiting",
    "group:definitelyTyped",
    ":dependencyDashboard",
    "docker:enableMajor",
    ":preserveSemverRanges"
  ],
  "labels":[
    "renovate"
  ],
  "postUpdateOptions":[
    "npmDedupe",
    "yarnDedupeHighest"
  ],
  "gradle":{
    "enabled":false
  },
  "hostRules":[
    {
      "timeout":10000,
      "enableHttp2":true
    }
  ],
  "packageRules":[
    {
      "datasources":[
        "npm"
      ],
      "updateTypes":[
        "minor",
        "patch"
      ],
      "depTypeList":[
        "devDependencies"
      ],
      "automerge":true
    },
    {
      "groupName":"Keplr packages",
      "packagePatterns":[
        "^@keplr/.*$"
      ],
      "schedule":[]
    },
    {
      "groupName":"Keplr clients",
      "packagePatterns":[
        "^@keplr/api-client-.*$"
      ],
      "packageNames":[
        "@keplr/backend-catalog"
      ],
      "schedule":[]
    },
    {
      "groupName":"Mon-March√© packages",
      "packagePatterns":[
        "^@monmarche/.*$"
      ],
      "schedule":[]
    },
    {
      "groupName":"Test packages",
      "packagePatterns":[
        "^ava$",
        "^jest$",
        "^jest-",
        "^nyc$",
        "^sinon$",
        "^ts-jest$",
        "^@testing-library/.*$"
      ]
    },
    {
      "groupName":"Linting packages",
      "packagePatterns":[
        "^eslint-",
        "^@typescript-eslint/"
      ],
      "packageNames":[
        "@keplr/eslint-config-backend-node",
        "@keplr/eslint-config-typescript",
        "eslint",
        "lint-staged",
        "prettier"
      ]
    },
    {
      "groupName":"TypeScript packages",
      "packagePatterns":[
        "^@types/",
        "^ts-config-paths$",
        "^ts-node$",
        "^ts-node-dev$",
        "^typescript$"
      ]
    },
    {
      "packageNames":[
        "@types/node"
      ],
      "major":{
        "enabled":true
      }
    },
    {
      "groupName":"Fastify packages",
      "packagePatterns":[
        "^fastify"
      ]
    },
    {
      "groupName":"Moment packages",
      "packagePatterns":[
        "^moment$",
        "^moment-"
      ]
    },
    {
      "groupName":"Mongo packages",
      "packagePatterns":[
        "^@types/mongoose",
        "^mongodb$",
        "^mongoose$",
        "^mongoose-"
      ]
    },
    {
      "groupName":"Promises packages",
      "packagePatterns":[
        "^p-.+"
      ]
    },
    {
      "groupName":"BlueprintJS packages",
      "packagePatterns":[
        "^@blueprintjs/.*$"
      ]
    },
    {
      "updateTypes":[
        "major"
      ],
      "labels":[
        "update-major"
      ]
    }
  ],
  "rangeStrategy":"bump"
}
